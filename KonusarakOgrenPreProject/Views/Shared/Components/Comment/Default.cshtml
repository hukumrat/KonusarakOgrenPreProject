@model MvcWebUI.ViewModels.CommentViewModel;

<section class="site-section bg-light" id="contact-section" data-aos="fade">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="section-title mb-3">Edit Product</h2>
            </div>
        </div>
        <div class="row mb-5">
        </div>
        <div class="row">
            <div class="col-md-12 mb-5">

                <form asp-controller="Products" asp-action="Comment" method="post" class="p-5 bg-white">

                    <h2 class="h4 text-black mb-5">Product Edit Form</h2>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label asp-for="Name" class="text-black">Product Name</label>
                            <input type="text" asp-for="Name" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">

                            <label asp-for="Description" class="text-black">Description</label>
                            <textarea cols="30" rows="7" class="form-control" asp-for="Description" placeholder="Write your comment here..."></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Send Message" class="btn btn-primary btn-md text-white">
                        </div>
                    </div>


                </form>
            </div>

        </div>
    </div>
</section>