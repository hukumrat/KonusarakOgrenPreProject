@model MvcWebUI.ViewModels.ProductsEditViewModel;

<section class="site-section bg-light" id="process" data-aos="fade">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <h2 class="section-title mb-3">Edit Product</h2>
            </div>
        </div>
        <div class="row mb-5">
        </div>
        <div class="row">
            <div class="col-md-12 mb-5">

                <form asp-controller="Products" asp-action="Update" method="post" class="p-5 bg-white">

                    <h2 class="h4 text-black mb-5">Product Edit Form</h2>

                    <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label asp-for="Name" class="text-black">Name</label>
                            <input type="text" asp-for="Name" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Color" class="text-black">Color</label>
                            <input type="text" asp-for="Color" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">

                        <div class="col-md-12">
                            <label asp-for="Weight" class="text-black">Weight</label>
                            <input type="number" asp-for="Weight" class="form-control">
                        </div>
                    </div>

                     <div class="row form-group">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label asp-for="Quantity" class="text-black">Quantity</label>
                            <input type="text" asp-for="Quantity" class="form-control">
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Brand" class="text-black">Brand</label>
                            <input type="text" asp-for="Brand" class="form-control">
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">

                            <label asp-for="Description" class="text-black">Description</label>
                            <textarea cols="30" rows="7" class="form-control" asp-for="Description" placeholder="Write your description or questions here..."></textarea>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Send Message" class="btn btn-primary btn-md text-white">
                        </div>
                    </div>


                </form>
            </div>

        </div>
    </div>
</section>